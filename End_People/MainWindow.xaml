<Window x:Class="End_People.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>

        <ControlTemplate x:Key="List_Bar">
            <Border BorderBrush="Blue" BorderThickness="6" CornerRadius="5" Background="BurlyWood">
                
                <TextBlock>
                    <ItemsPresenter TextBlock.Foreground="Black"/>
                </TextBlock>
                
            </Border>
        </ControlTemplate>
        
    </Window.Resources>
    
    <StackPanel Orientation="Horizontal">
        <ListBox SelectedIndex="0" Margin="4" Width="100" 
                 Template="{StaticResource List_Bar}"/>
        <Label Margin="10,10"/>
    </StackPanel>
</Window>
